<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/details_img"
        android:layout_width="@dimen/four_ten_dp"
        android:layout_height="@dimen/four_ten_dp"
        android:layout_margin="@dimen/five_dp" />

    <LinearLayout
        android:layout_toRightOf="@+id/details_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/five_dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/five_dp"
            />

        <RelativeLayout
            android:layout_margin="@dimen/five_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/details_kc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRen"
                android:textSize="@dimen/ten_sp"
                />

            <TextView
                android:text="@string/qianka"
                android:textSize="@dimen/ten_sp"
                android:layout_toRightOf="@+id/details_kc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_color_more"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/ten"
        />

</RelativeLayout>