<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ten"
        android:background="@color/colorWhiteFour"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/one_two"
        android:orientation="vertical"
        android:padding="@dimen/ten">
        <TextView
            android:id="@+id/knowledge_title_two"
            android:textSize="@dimen/one_four_sp"
            android:textColor="@color/colorDick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/ten">
            <ImageView
                android:id="@+id/knowledge_imgOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/one_two"
                android:layout_weight="1"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/knowledge_imgTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/one_two"
                android:layout_weight="1"
                android:scaleType="fitXY"/>
            <ImageView
                android:id="@+id/knowledge_imgThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="fitXY"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ten">
            <TextView
                android:id="@+id/knowledge_source_two"
                android:textSize="@dimen/one_two_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/knowledge_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_watch"/>
            <TextView
                android:id="@+id/knowledge_tail_two"
                android:textSize="@dimen/one_two_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/knowledge_source_two"
                android:layout_marginLeft="@dimen/five_dp"
                android:layout_toRightOf="@+id/knowledge_img"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>