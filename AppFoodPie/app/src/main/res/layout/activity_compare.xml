<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_compare"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kevin.appfoodpie.CompareActivity">

    <LinearLayout
        android:id="@+id/kk"
        android:background="@null"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:src="@mipmap/ic_back_dark"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:textColor="#000"
            android:text="对比详情"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/vv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/kk"
        >

        <ImageView
            android:id="@+id/com_vs"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_library_vs"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/com_left"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/com_vs"
            android:src="@mipmap/img_compare_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:id="@+id/com_right"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/com_vs"
            android:src="@mipmap/img_compare_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/gg"
        android:layout_below="@+id/vv"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="营养元素(毫克)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <ListView
        android:id="@+id/com_lv"
        android:layout_below="@+id/gg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>
